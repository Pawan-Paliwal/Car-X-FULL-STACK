<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main data-aos="slide-down">
                <% if (orders.length <=0) { %>
                    <div class="container fi">
                        <div class="main">
                            <div class="card32">
                                <h4 class="card-title id-3" style="height: 2rem;">Missing Order items?</h4>
                            </div>
                            <div class="center">
                                <img src="src/cart.png" alt="" class="img-cart" />
                                <h5 class="id-3">Nothing in orders</h5>
                                <h6 class="id-3">Add item to shop now</h6>
                                <button class="btn btn-primary"><a href=" /products" class="btn-set">shop
                                        now</a></button>
                            </div>
                        </div>
                    </div>
                    <% } else { %>

                        <ul class="orders">
                            <% orders.forEach(order=> { %>
                                <li class="orders__item">
                                    <h1>Order - # <%= order._id %> <a href="/orders/<%=order._id%>">Invoice</a></h1>
                                    <ul class="orders__products">
                                        <% order.products.forEach(p=> { %>
                                            <li class="orders__products-item">
                                                <%= p.product.title %> (<%= p.quantity %>) -
                                            </li>
                                            <% }); %>
                                    </ul>
                                </li>
                                <% }); %>
                        </ul>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
                <%- include('../includes/footer.ejs') %>